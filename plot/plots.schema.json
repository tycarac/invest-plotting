{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://thystra.com/schemas/myschema.json",
  "title": "Plot configuration",
  "type": "object",
  "required": [
    "plots"
  ],
  "properties": {
    "output": {
      "type": "object",
      "properties": {
        "filename": {
          "type": "string"
        }
      },
      "required": [
        "filename"
      ]
    },
    "input": {
      "type": "object",
      "properties": {
        "yahooCodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "filenames": {
          "$ref": "#/definitions/mappedFilename"
        }
      }
    },
    "views": {
      "type": "object"
    }
  },
  "definitions": {
    "mappedFilename": {
      "type": "object",
      "properties": {
        "filename": {
          "type": "string"
        },
        "fields": {
          "type": "object",
          "properties": {
          },
          "additionalProperties": true
        }
      },
      "required": [
        "filename"
      ]
    }
  }
}
